{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "components.d.ts",
    "auto-imports.d.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // 支持隐式any
    "noImplicitAny": false,
    "lib": ["ESNext", "ES5", "ES2015", "DOM"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
